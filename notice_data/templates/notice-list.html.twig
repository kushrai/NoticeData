<style>
#tbstyle {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
 
}

#tbstyle td, #tbstyle th {
  border: 1px solid 
#ddd;
  padding: 8px;
}

#tbstyle tr:nth-child(even){background-color: 
#f2f2f2;}

#tbstyle tr:hover {background-color: 
#ddd;}

#tbstyle th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: 
#859161;
  color: 
White;
}
</style>
</head>
<body>
     <div class="container" style="width:100%;">
     <div class="table-container">
    <table id="tbstyle">
      <tbody>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Published</th>
        </tr>
        {% for item in data.notice %}
        <tr>
          <td>{{ item.title }}</td>
          <td> {{ item.content | raw }}</td>
          <td> {{ item.published | date('d F Y') }} </td>
        </tr>
       {% endfor %}
    </tbody>
</table>

<td>{{ data.pager }}</td>
</div>
</div>